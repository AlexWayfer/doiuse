{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "/dev/null",
    "removeComments": false,
    "target": "ES2021",
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true
  },
  "include": [
    "bin/**/*.js",
    "data/**/*.js",
    "features/**/*.js",
    "exports/**/*.js",
    "lib/**/*.js",
    "util/**/*.js",
    "test/**/*.js",
    "scripts/**/*.js"
  ],
  "exclude": [
    "./**/*.cjs",
    "./node_modules/*",
    "types/*"
  ]
}