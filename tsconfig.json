{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "types",
    "removeComments": false,
    "target": "ES2021",
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true
  },
  "include": [
    "bin/**/*.js",
    "data/**/*.js",
    "features/**/*.js",
    "exports/**/*.js",
    "lib/**/*.js",
    "util/**/*.js",
    "test/**/*.js"
  ]
}