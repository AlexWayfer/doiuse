{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2021",
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/node_modules/*"
  ]
}